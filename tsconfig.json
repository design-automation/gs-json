{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "",
        "outDir": "./dist",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration":true,
        "types": [ "jasmine", "node" ],
        "typeRoots": [ "./node_modules/@types" ]
    },
    "include": [
        "*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
